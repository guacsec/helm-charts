{
    "title": "Chart Values",
    "type": "object",
    "properties": {
        "imagePullSecrets": {
            "type": "array",
            "description": "Docker registry secret name for pulling images",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Docker registry secret name for pulling images"
                    }
                }
            }
        },
        "guac": {
            "type": "object",
            "properties": {
                "workingDir": {
                    "type": "string",
                    "description": "Working Directory for GUAC",
                    "default": "/workspace"
                },
                "ociCollector": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "String Name of the OCI Collector component.",
                            "default": "oci-collector"
                        },
                        "replicas": {
                            "type": "number",
                            "description": "Number of replicas for oci collector deployment",
                            "default": 1
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "description": "Path to the OCI Collector image",
                                    "default": "ghcr.io/kusaridev/local-organic-guac"
                                },
                                "tag": {
                                    "type": "string",
                                    "description": "Tag if using an image tag.  Optional",
                                    "default": "",
                                    "nullable": true
                                },
                                "digest": {
                                    "type": "string",
                                    "description": "Sha256 Image Digest.  It is strongly recommended to use this for verification.",
                                    "default": "sha256:b11d8361368409333c6ed8c0a94dc395814a23828d15cfe54a3e45e973fb3b99"
                                },
                                "pullPolicy": {
                                    "type": "string",
                                    "description": "ImagePullPolicy for kubernetes",
                                    "default": "IfNotPresent"
                                },
                                "command": {
                                    "type": "array",
                                    "description": "Command for the OCI Collector image.  It is not recommended to override this.",
                                    "default": [
                                        "sh",
                                        "-c",
                                        "/cnb/process/collector image --use-csub"
                                    ],
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "depsDevCollector": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "String Name of the Deps.Dev Collector component.",
                            "default": "depsdev-collector"
                        },
                        "replicas": {
                            "type": "number",
                            "description": "Number of replicas for depsdev collector deployment",
                            "default": 1
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "description": "Path to the Deps.Dev Collector image",
                                    "default": "ghcr.io/kusaridev/local-organic-guac"
                                },
                                "tag": {
                                    "type": "string",
                                    "description": "Tag if using an image tag.  Optional",
                                    "default": "",
                                    "nullable": true
                                },
                                "digest": {
                                    "type": "string",
                                    "description": "Sha256 Image Digest.  It is strongly recommended to use this for verification.",
                                    "default": "sha256:b11d8361368409333c6ed8c0a94dc395814a23828d15cfe54a3e45e973fb3b99"
                                },
                                "pullPolicy": {
                                    "type": "string",
                                    "description": "ImagePullPolicy for kubernetes",
                                    "default": "IfNotPresent"
                                },
                                "command": {
                                    "type": "array",
                                    "description": "Command for the Deps.Dev Collector image.  It is not recommended to override this.",
                                    "default": [
                                        "sh",
                                        "-c",
                                        "/cnb/process/collector deps_dev --use-csub"
                                    ],
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "osvCertifier": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "String Name of the OSV Certifier component.",
                            "default": "osv-certifier"
                        },
                        "replicas": {
                            "type": "number",
                            "description": "Number of replicas for OSV Certifier deployment",
                            "default": 1
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "description": "Path to the OSV Certifier Collector image",
                                    "default": "ghcr.io/kusaridev/local-organic-guac"
                                },
                                "tag": {
                                    "type": "string",
                                    "description": "Tag if using an image tag.  Optional",
                                    "default": "",
                                    "nullable": true
                                },
                                "digest": {
                                    "type": "string",
                                    "description": "Sha256 Image Digest.  It is strongly recommended to use this for verification.",
                                    "default": "sha256:b11d8361368409333c6ed8c0a94dc395814a23828d15cfe54a3e45e973fb3b99"
                                },
                                "pullPolicy": {
                                    "type": "string",
                                    "description": "ImagePullPolicy for kubernetes",
                                    "default": "IfNotPresent"
                                },
                                "command": {
                                    "type": "array",
                                    "description": "Command for the OSV Certifier Collector image.  It is not recommended to override this.",
                                    "default": [
                                        "sh",
                                        "-c",
                                        "/cnb/process/guacone osv --poll --interval 5"
                                    ],
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "ingestor": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "String Name of the ingestor component.",
                            "default": "ingestor"
                        },
                        "replicas": {
                            "type": "number",
                            "description": "Number of replicas for ingestor deployment",
                            "default": 1
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "description": "Path to the Ingestor image",
                                    "default": "ghcr.io/kusaridev/local-organic-guac"
                                },
                                "tag": {
                                    "type": "string",
                                    "description": "Tag if using an image tag.  Optional",
                                    "default": "",
                                    "nullable": true
                                },
                                "digest": {
                                    "type": "string",
                                    "description": "Sha256 Image Digest.  It is strongly recommended to use this for verification.",
                                    "default": "sha256:b11d8361368409333c6ed8c0a94dc395814a23828d15cfe54a3e45e973fb3b99"
                                },
                                "pullPolicy": {
                                    "type": "string",
                                    "description": "ImagePullPolicy for kubernetes",
                                    "default": "IfNotPresent"
                                },
                                "command": {
                                    "type": "array",
                                    "description": "Command for the ingestor image.  It is not recommended to override this.",
                                    "default": [
                                        "sh",
                                        "-c",
                                        "/cnb/process/ingest ingest"
                                    ],
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "collectSub": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "String Name of the Collector Sub component.",
                            "default": "collectsub"
                        },
                        "replicas": {
                            "type": "number",
                            "description": "Number of replicas for Collector Sub deployment",
                            "default": 1
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "description": "Path to the Collector Sub image",
                                    "default": "ghcr.io/kusaridev/local-organic-guac"
                                },
                                "tag": {
                                    "type": "string",
                                    "description": "Tag if using an image tag.  Optional",
                                    "default": "",
                                    "nullable": true
                                },
                                "digest": {
                                    "type": "string",
                                    "description": "Sha256 Image Digest.  It is strongly recommended to use this for verification.",
                                    "default": "sha256:b11d8361368409333c6ed8c0a94dc395814a23828d15cfe54a3e45e973fb3b99"
                                },
                                "pullPolicy": {
                                    "type": "string",
                                    "description": "ImagePullPolicy for kubernetes",
                                    "default": "IfNotPresent"
                                },
                                "command": {
                                    "type": "array",
                                    "description": "Command for the Collector Sub image.  It is not recommended to override this.",
                                    "default": [
                                        "sh",
                                        "-c",
                                        "/cnb/process/guacone csub-server"
                                    ],
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "ports": {
                            "type": "array",
                            "description": "Protocol used at Collector Sub",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "protocol": {
                                        "type": "string",
                                        "description": "Protocol used at Collector Sub"
                                    },
                                    "port": {
                                        "type": "number",
                                        "description": "Port the Collector Sub service listens on"
                                    },
                                    "targetPort": {
                                        "type": "number",
                                        "description": "Port the Collector Sub container listens on"
                                    }
                                }
                            }
                        }
                    }
                },
                "graphqlServer": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "String Name of the GraphQL Server component.",
                            "default": "graphql-server"
                        },
                        "replicas": {
                            "type": "number",
                            "description": "Number of replicas for GraphQL Server deployment",
                            "default": 1
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "description": "Path to the GraphQL Server image",
                                    "default": "ghcr.io/kusaridev/local-organic-guac"
                                },
                                "tag": {
                                    "type": "string",
                                    "description": "Tag if using an image tag.  Optional",
                                    "default": "",
                                    "nullable": true
                                },
                                "digest": {
                                    "type": "string",
                                    "description": "Sha256 Image Digest.  It is strongly recommended to use this for verification.",
                                    "default": "sha256:b11d8361368409333c6ed8c0a94dc395814a23828d15cfe54a3e45e973fb3b99"
                                },
                                "pullPolicy": {
                                    "type": "string",
                                    "description": "ImagePullPolicy for kubernetes",
                                    "default": "IfNotPresent"
                                },
                                "command": {
                                    "type": "array",
                                    "description": "Command for the GraphQL Server image.  It is not recommended to override this.",
                                    "default": [
                                        "sh",
                                        "-c",
                                        "/cnb/process/guacone gql-server"
                                    ],
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "ports": {
                            "type": "array",
                            "description": "Protocol used at the the GraphQL Server",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "protocol": {
                                        "type": "string",
                                        "description": "Protocol used at the the GraphQL Server"
                                    },
                                    "port": {
                                        "type": "number",
                                        "description": "Port the GraphQL Server service listens on"
                                    },
                                    "targetPort": {
                                        "type": "number",
                                        "description": "Port the GraphQL Server container listens on"
                                    }
                                }
                            }
                        },
                        "backend": {
                            "type": "string",
                            "description": "Which backend to use - inmem or neo4j. If neo4j, neo4j.enabled must be set to true.",
                            "default": "inmem"
                        },
                        "debug": {
                            "type": "boolean",
                            "description": "Enable debug mode for graphql server; also enable the UI",
                            "default": false
                        }
                    }
                },
                "observability": {
                    "type": "object",
                    "properties": {
                        "deployServiceMonitor": {
                            "type": "boolean",
                            "description": "Boolean Deploy the service monitor for observability",
                            "default": false
                        }
                    }
                },
                "sampleData": {
                    "type": "object",
                    "properties": {
                        "ingest": {
                            "type": "boolean",
                            "description": "Boolean - set to true to ingest sample data after deployment",
                            "default": true
                        },
                        "jobName": {
                            "type": "string",
                            "description": "Name of the sample data ingest job",
                            "default": "ingest-guac-data"
                        }
                    }
                }
            }
        },
        "neo4j": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "If false, neo4j will not be installed",
                    "default": false
                },
                "neo4j": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Name of the neo4j instance",
                            "default": "guac-neo4j"
                        },
                        "password": {
                            "type": "string",
                            "description": "Initial password for neo4j instance",
                            "default": "s3cr3ts3cr3t"
                        },
                        "edition": {
                            "type": "string",
                            "description": "Type of instance being used.  Example \"community\" or \"enterprise\"",
                            "default": "community"
                        },
                        "labels": {
                            "type": "object",
                            "properties": {
                                "release": {
                                    "type": "string",
                                    "description": "Label for release.  This is used as part of monitoring",
                                    "default": "monitoring"
                                }
                            }
                        },
                        "resources": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string",
                                    "description": "CPU allocation for neo4j",
                                    "default": "1000m"
                                },
                                "memory": {
                                    "type": "string",
                                    "description": "Memory allocation for neo4j",
                                    "default": "4Gi"
                                }
                            }
                        }
                    }
                },
                "services": {
                    "type": "object",
                    "properties": {
                        "neo4j": {
                            "type": "object",
                            "properties": {
                                "spec": {
                                    "type": "object",
                                    "properties": {
                                        "type": {
                                            "type": "string",
                                            "description": "Kubernetes service type for neo4j service",
                                            "default": "ClusterIP"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "jvm": {
                    "type": "object",
                    "properties": {
                        "additionalJvmArguments": {
                            "type": "array",
                            "description": "JVM Arguments for the neo4j server.",
                            "default": [
                                "-XX:+HeapDumpOnOutOfMemoryError",
                                "-XX:HeapDumpPath=/logs/neo4j.hprof"
                            ],
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "volumes": {
                    "type": "object",
                    "properties": {
                        "data": {
                            "type": "object",
                            "properties": {
                                "mode": {
                                    "type": "string",
                                    "description": "Data mode for neo4j volume mount.",
                                    "default": "dynamic"
                                },
                                "dynamic": {
                                    "type": "object",
                                    "properties": {
                                        "storageClassName": {
                                            "type": "string",
                                            "description": "Storage class for neo4j volume mount.",
                                            "default": "standard"
                                        },
                                        "requests": {
                                            "type": "object",
                                            "properties": {
                                                "storage": {
                                                    "type": "string",
                                                    "description": "Size of neo4j volume mount.",
                                                    "default": "100Gi"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "nats": {
            "type": "object",
            "properties": {
                "nats": {
                    "type": "object",
                    "properties": {
                        "jetstream": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean",
                                    "description": "Boolean for enabling JetStream.",
                                    "default": true
                                }
                            }
                        },
                        "limits": {
                            "type": "object",
                            "properties": {
                                "maxPayload": {
                                    "type": "string",
                                    "description": "Max Payload size for nats",
                                    "default": "64MB"
                                }
                            }
                        }
                    }
                },
                "exporter": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Boolean to enable data collection",
                            "default": true
                        },
                        "serviceMonitor": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean",
                                    "description": "Boolean to enable nats service monitor",
                                    "default": false
                                },
                                "namespace": {
                                    "type": "string",
                                    "description": "nats service monitor namespace - this is for monitoring purposes and is used by Prometheus",
                                    "default": "monitoring"
                                },
                                "labels": {
                                    "type": "object",
                                    "properties": {
                                        "release": {
                                            "type": "string",
                                            "description": "Label to associate nats service monitor with GUAC for monitoring purposes",
                                            "default": "monitoring"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}